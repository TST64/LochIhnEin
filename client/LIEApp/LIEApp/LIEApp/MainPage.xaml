<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LIEApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#0FB430" Padding="24" CornerRadius="0">
            <Label Text="Willkomen in der LIE APP" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Die App für die Samstagstruppe des Golgclub Bremer Schweiz" FontSize="Title" Padding="30,10,30,10"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Bitte zunächst anmelden"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Button Text="Anmelden" Clicked="OnButtonClicked"/>
    </StackLayout>

</ContentPage>
